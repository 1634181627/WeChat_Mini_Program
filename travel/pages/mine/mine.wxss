.container {
  background-color: #eff2f9
}

.userinfo-wp {
  width: 100%;
  height: 250rpx;
  background-color: #fff;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.my-point {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border: 1px solid rgb(221, 221, 221);
}

.text {
  color: #aaa;
  font-size: 32rpx;
}

/* 我的订单 */
.myOrder-wp {
  margin-top: 20rpx;
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  border: 1px solid rgb(221, 221, 221);
}

.myOrder-title {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 0 30rpx;
}

.myOrder-title image {
  width: 32rpx;
  height: 32rpx;
}


.line {
  width: 720rpx;
  height:2rpx;
  background-color: rgb(221, 221, 221); 
  display: flex;
  margin-left: 30rpx;
}

.myOrder-item-wp {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.myOrder-item {
  width: 150rpx;
  height: 150rpx;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center; 
  color: #666;
}

.myOrder-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.list {
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 32rpx; 
}